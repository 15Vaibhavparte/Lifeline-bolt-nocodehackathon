# Supabase MCP Server Environment Variables
# Copy this file to .env.mcp and fill in your actual values

# Your Supabase project URL (from Supabase Dashboard > Settings > API)
SUPABASE_URL=https://your-project-ref.supabase.co

# Your Supabase Service Role Key (from Supabase Dashboard > Settings > API)
# ⚠️ IMPORTANT: Use Service Role Key, NOT Anon Key for MCP server
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Optional: Database connection settings
SUPABASE_DB_HOST=db.your-project-ref.supabase.co
SUPABASE_DB_PORT=5432
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=your_db_password
